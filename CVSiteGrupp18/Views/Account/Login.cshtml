@model Db.Models.LogInViewModel

@{
    ViewData["Title"] = "Logga in";
}

<h2>Logga in</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Login" method="post">
    <!-- Dolt fält för att routa till action -->
    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
    <div class="form-group">
        <label>Användarnamn:</label>
        <input asp-for="UserName" class="form-control" />
        
    </div>

    <div class="form-group">
        <label>Lösenord:</label>
        <input asp-for="Password" class="form-control" />
        
    </div>

    <div class="form-group">
        <div class="form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label  class="form-check-label">Kom ihåg mig</label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Logga in</button>
</form>

<label>Saknar du konto? </label>
<a asp-action="Register">Registrera dig</a>
