@model Db.Models.RegisterViewModel

<h2>Registrera dig</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Register" method="post">
    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

    <div class="form-group">
        <label>Användarnamn:</label>
        <input asp-for="UserName" class="form-control" />

    </div>

    <div class="form-group">
        <label>Telefonnummer:</label>
        <input asp-for="TelefonNummer" placeholder="073-1234567" class="form-control" />

    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="exempel@exempel.se" class="form-control" />

    </div>

    <div class="form-group">
        <label>Adress:</label>
        <input asp-for="Address" class="form-control" />

    </div>

    <div class="form-group">
        <label>Lösenord:</label>
        <input asp-for="Password" class="form-control" />
       
    </div>

    <div class="form-group">
        <label>Bekräfta lösenord:</label>
        <input asp-for="ConfirmPassword" class="form-control" />
       
    </div>

    <div class="form-group">
        <div class="form-check">
            <input asp-for="isPublic" class="form-check-input" />
            <label class="form-check-label">Offentlig profil</label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Registrera</button>
</form>


