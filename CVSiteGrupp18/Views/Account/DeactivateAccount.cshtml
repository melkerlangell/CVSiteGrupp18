@model DeactivateAccountViewModel

<h2>Avaktivera kontot</h2>

<form asp-action="DeactivateAccount" method="post">
    <div class="form-group">
        <label>Är du säker på att du vill avaktivera ditt konto?</label>
        <!-- Dold fält för UserId -->
        <input type="hidden" asp-for="UserId" />
        <!-- Checkbox för att bekräfta avaktivering -->
        <input type="checkbox" asp-for="ConfirmDeactivation" /> Ja, jag vill avaktivera mitt konto
    </div>
    <button type="submit" class="btn btn-danger">Avaktivera</button>
    <a asp-controller="Account" asp-action="Profile" class="btn btn-secondary">Avbryt</a>
</form>