@model IEnumerable<Message>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mina Meddelanden</title>
    <!-- Lägg till Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Mina Meddelanden</h1>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Avsändare</th>
                            <th>Meddelande</th>
                            <th>Skickat</th>
                            <th>Åtgärd</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model)
                        {
                            <tr>
                                <td>@message.Sender</td>
                                <td>@message.Content</td>
                                <td>@message.Timestamp.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-center">
                                    <button class="btn btn-primary btn-sm">
                                        Gör något
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                Du har inga meddelanden.
            </div>
        }
    </div>

    <!-- Lägg till Bootstrap JS (valfritt för interaktivitet) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
