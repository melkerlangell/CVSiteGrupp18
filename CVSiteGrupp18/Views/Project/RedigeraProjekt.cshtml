@model Db.Models.Projektmodeller.CreateProject

<h1>Redigera Projekt</h1>

<form asp-action="RedigeraProjekt" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="ProjectId" />

    <div class="form-group">
        <label for="Title">Titel</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label for="Description">Beskrivning</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div>
        <label>Startdatum</label>
		<input type="date" asp-for="StartDatum" class="form-control" />
    </div>
    <div>
         <label>Slutdatum (valbar)</label
         <input type="date" asp-for="SlutDatum" class="form-control" />
    </div>
    <div>
        <label>Länk till projekt (valbar)</label>
        <input type="text" asp-for="ExternalLink" />
    </div>

    <button type="submit" class="btn btn-primary">Spara ändringar</button>
</form>
